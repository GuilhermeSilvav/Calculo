import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		Scanner sc =new Scanner(System.in);
		
		int num1, num2, soma;
		
		System.out.println("Informe o valor do num1: ");
		num1 = sc.nextInt();
		
		System.out.println("Informe o valor do num2: ");
		num2 = sc.nextInt();
		
		soma = num1 + num2;
		
		System.out.println("A soma dos numeros é: " + soma);
		
		int multiplicacao = num1 * num2;
    System.out.println("A multiplicacao dos numeros é: " + multiplicacao);
		multiplicacao = sc.nextInt();
    
		int divisao = num1 / num2;
		System.out.println("A divisao dos numeros é: " + divisao);
		divisao = sc.nextInt();
	
		sc.close();

	}

}
